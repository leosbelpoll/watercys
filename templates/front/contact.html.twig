{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
	<div class="row">
		<div class="col-12 col-md-6">
			<form id="frmContacto" name="frmContacto" action="inc/procesa-cotizacion.php" method="post">
				<fieldset>
					<div class="form-group">
						<label>{% trans %}navbar.products{% endtrans %} / {% trans %}navbar.services{% endtrans %}:</label>
						<select class="form-control" name="tipo" id="tipo">
							<option value="" selected="selected">-- {% trans %}select{% endtrans %} --</option>
							<option value="Producto / Servicio-1">{% trans %}navbar.products{% endtrans %} / {% trans %}navbar.services{% endtrans %}-1</option>
							<option value="Producto / Servicio-2">{% trans %}navbar.products{% endtrans %} / {% trans %}navbar.services{% endtrans %}-2</option>
							<option value="Producto / Servicio-3">{% trans %}navbar.products{% endtrans %} / {% trans %}navbar.services{% endtrans %}-3</option>
							<option value="Producto / Servicio-4">{% trans %}navbar.products{% endtrans %} / {% trans %}navbar.services{% endtrans %}-4</option>
							<option value="Producto / Servicio-5">{% trans %}navbar.products{% endtrans %} / {% trans %}navbar.services{% endtrans %}-5</option>
						</select>
					</div>
					<div class="form-group">
						<label>{% trans %}company{% endtrans %} :</label>
						<input class="form-control" name="empresa" type="text" id="empresa">
					</div>
					<div class="form-group">
						<label>{% trans %}contact-name{% endtrans %} :</label>
						<input class="form-control" name="nombre" type="text" id="nombre">
					</div>
					<div class="form-group">
						<label>Email :</label>
						<input class="form-control" name="email" type="text" id="email">
					</div>
					<div class="form-group">
						<label>{% trans %}phone{% endtrans %} :</label>
						<input class="form-control" name="telefono" type="text" id="telefono">
					</div>
					<div class="form-group">
						<label>{% trans %}addres{% endtrans %} :</label>
						<input class="form-control" name="direccion" type="text" id="direccion">
					</div>
					<div class="form-group">
						<label>{% trans %}city{% endtrans %} :</label>
						<input class="form-control" name="ciudad" type="text" id="ciudad">
					</div>
					<div class="form-group">
						<label>{% trans %}comments{% endtrans %} :</label>
						<textarea class="form-control" name="comentarios" rows="3" id="comentarios"></textarea>
					</div>
					<br>
					<div class="clear"></div>
					<div class="clear"></div>
					<div class="form-btn">
						<input class="btn btn-primary" type="button" id="validar-cotizacion" name="button" value="Enviar">
					</div>
					<br>
					<br>
				</fieldset>
			</form>
		</div>
		<div class="col-md-6 d-none d-md-block" >
			<h1>{% trans %}contact-sumary{% endtrans %}</h1>
		</div>
	</div>
</div>
{% endblock %}

