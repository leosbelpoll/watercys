{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
	<div class="row">
		<div class="col-12 col-md-6">
			<form id="frmContacto" name="frmContacto" action="{{path('cotization')}}" method="post">
				<fieldset>
					{% for message in app.flashes('success') %}
					<div class="alert alert-success">
						{{ message }}
					</div>
					{% endfor %}
					{% for message in app.flashes('error') %}
					<div class="alert alert-danger">
						{{ message }}
					</div>
					{% endfor %}
					<div class="form-group">
						<label>{% trans %}navbar.products{% endtrans %} / {% trans %}navbar.services{% endtrans %}:</label>
						<select class="form-control" name="type" id="type">
							<option value="" selected="selected">-- {% trans %}select{% endtrans %} --</option>
							<option value="{% trans %}services.ing-name{% endtrans %}">
								{% trans %}services.ing-name{% endtrans %}
							</option>
							<option value="{% trans %}services.mont-name{% endtrans %}">
								{% trans %}services.mont-name{% endtrans %}
							</option>
							<option value="{% trans %}services.op-name{% endtrans %}">
								{% trans %}services.op-name{% endtrans %}
							</option>
						</select>
					</div>
					<div class="form-group">
						<label>{% trans %}company{% endtrans %} :</label>
						<input class="form-control" name="empresa" type="text" id="empresa">
					</div>
					<div class="form-group">
						<label>{% trans %}turn-company{% endtrans %} :</label>
						<input class="form-control" name="giro" type="text" id="giro">
					</div>
					<div class="form-group">
						<label>{% trans %}contact-name{% endtrans %} :</label>
						<input class="form-control" name="nombre" type="text" id="nombre">
					</div>
					<div class="form-group">
						<label>Email :</label>
						<input class="form-control" name="email" type="text" id="email">
					</div>
					<div class="form-group">
						<label>{% trans %}phone{% endtrans %} :</label>
						<input class="form-control" name="telefono" type="text" id="telefono">
					</div>
					<div class="form-group">
						<label>{% trans %}address{% endtrans %} :</label>
						<input class="form-control" name="direccion" type="text" id="direccion">
					</div>
					<div class="form-group">
						<label>{% trans %}city{% endtrans %} :</label>
						<input class="form-control" name="ciudad" type="text" id="ciudad">
					</div>
					<div class="form-group">
						<label>{% trans %}comments{% endtrans %} :</label>
						<textarea class="form-control" name="comentarios" rows="3" id="comentarios"></textarea>
					</div>
					<br>
					<div class="clear"></div>
					<div class="clear"></div>
					<div class="form-btn">
						<input class="btn btn-primary" type="submit" id="validar-cotizacion" name="button" value="Enviar">
					</div>
					<br>
					<br>
				</fieldset>
			</form>
		</div>
		<div class="col-md-6 d-none d-md-block" >
			<p>{% trans %}contact-sumary{% endtrans %}</p>
		</div>
	</div>
</div>
{% endblock %}

